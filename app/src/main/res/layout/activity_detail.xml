<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/label_main_name"
            style="@style/labels"
            android:layout_below="@id/image_iv"
            android:text="@string/main_name" />

        <TextView
            android:id="@+id/main_name_tv"
            style="@style/label_values"
            android:layout_below="@id/image_iv"
            android:layout_toRightOf="@id/label_main_name" />

        <TextView
            android:id="@+id/label_also_known_as"
            style="@style/labels"
            android:layout_below="@id/label_main_name"
            android:text="@string/detail_also_known_as_label" />

        <TextView
            android:id="@+id/also_known_tv"
            style="@style/label_values"
            android:layout_below="@id/label_main_name"
            android:layout_toRightOf="@id/label_also_known_as"
            android:lineSpacingMultiplier="1.2" />

        <TextView
            android:id="@+id/label_place_of_origin"
            style="@style/labels"
            android:layout_below="@id/also_known_tv"
            android:text="@string/detail_place_of_origin_label" />

        <TextView
            android:id="@+id/origin_tv"
            style="@style/label_values"
            android:layout_below="@id/also_known_tv"
            android:layout_toRightOf="@id/label_place_of_origin" />

        <TextView
            android:id="@+id/label_description"
            style="@style/labels"
            android:layout_below="@id/label_place_of_origin"
            android:text="@string/detail_description_label" />

        <TextView
            android:id="@+id/description_tv"
            style="@style/label_values"
            android:layout_below="@id/label_place_of_origin"
            android:layout_toRightOf="@id/label_description"
            android:lineSpacingMultiplier="1.2" />

        <TextView
            android:id="@+id/label_ingredients"
            style="@style/labels"
            android:layout_below="@id/description_tv"
            android:text="@string/detail_ingredients_label" />

        <TextView
            android:id="@+id/ingredients_tv"
            style="@style/label_values"
            android:layout_below="@id/description_tv"
            android:layout_toRightOf="@id/label_ingredients"
            android:lineSpacingMultiplier="1.2" />

    </RelativeLayout>
</ScrollView>
